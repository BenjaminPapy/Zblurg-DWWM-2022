{% extends 'base.html.twig' %}

{% block title %}List of sizes{% endblock %}

{% block body %}
    <h1>List of sizes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for size in sizes %}
            <tr>
                <td>{{ size.id }}</td>
                <td>{{ size.name }}</td>
                <td>
                    <a href="{{ path('admin_size_show', {'id': size.id}) }}">show</a>
                    <a href="{{ path('admin_size_edit', {'id': size.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_size_new') }}">Create new</a>
{% endblock %}
