    {# VÃ©rifier si la route est "admin_ship_edit" on affiche les images #}
    {% if app.request.attributes.get('_route') == 'admin_ship_edit' %}

        <h2>Ship View</h2>

            {% if ship.shipView %}
                <div>
                    <img src="{{ asset('/images/ship-view/' ~ ship.shipView.name) }}" alt="Image" width="300px">
                </div>
            {% endif %}

        <h2>Images<h2>

        {% for image in ship.images %}
            <div>
                <img src="{{ asset('/images/ship-images/' ~ image.name) }}" alt="Image" width="300px">
                <a href="{{ path('admin_image_delete', {'id': image.id}) }}"
                data-delete data-token="{{csrf_token('delete' ~ image.id) }}">Supprimer</a>
            </div>
        {% endfor %}
    {% endif %}

    <button class="btn">{{ button_label|default('Save') }}</button>

{{ form_end(form) }}
