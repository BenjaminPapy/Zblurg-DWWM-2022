    {{ form_row(form.name) }}
    {{ form_row(form.slug) }}
    {{ form_row(form.type) }}
    {{ form_row(form.brand) }}
    {{ form_row(form.description) }}
    {{ form_row(form.length) }}
    {{ form_row(form.beam) }}
    {{ form_row(form.height) }}
    {{ form_row(form.size) }}
    {{ form_row(form.mass) }}
    {{ form_row(form.cargoCap) }}
